#!/usr/bin/env bash
# shellcheck shell=bash
#
# scripts/air-entrypoint

set -euo pipefail

ROOT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")/.." && pwd)"

source "$ROOT_DIR/scripts/lib/lib.sh"
source "$ROOT_DIR/scripts/lib/paths.sh"

main() {
  require_file "$BIN_PATH" "Refusing: binary not found at $BIN_PATH (Air should have built it)."
  exec "$BIN_PATH" "$@"
}

main "$@"
